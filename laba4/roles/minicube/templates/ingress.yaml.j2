apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ingress-app
  namespace: app
  labels:
    app.kubernetes.io/name: ingress-app
  annotations:
    traefik.ingress.networking.io/router.entrypounts: web #website
spec:
  rules:
  - host: myapp.local
    http:
      paths:
      - pathType: Prefix
        path: /
        backend:
          service:
            name: ser-app
            port: 
              number: 80

      - pathType: Prefix
        path: /api
        backend:
          service:
            name: ser-app
            port:
              number: 80

      - pathType: Prefix
        path: /metrics
        backend:
          service:
            name: ser-app
            port:
              number: 80
